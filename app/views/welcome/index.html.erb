<div class="grid-row">
  <div class="grid-col">
    <textarea id="editor">
      # Paste some ruby code here and 
      # check the generated AST on the right
      tips = ["hello", "world"]
      def print_tips
        tips.each { |key, value| print "Tip #{key}: #{value}" }
      end
    </textarea>

    <textarea id="ast-editor">
    </textarea>
  </div>
  <div class="grid-col">

    <textarea id="transform-editor">
      # Your Transform Class should always extend from 
      # Parser:: TreeRewriter
      class Transform < Parser::TreeRewriter
        def on_lvasgn(node)
        # Reverse the variable names
        replace(node.loc.to_hash[:name], node.children[0].to_s.reverse)
        end

        def on_def(node)
        replace(node.loc.to_hash[:name], node.children[0].to_s.reverse)
        end
      end
    </textarea>
    <textarea id="output-editor">
    </textarea>
  </div>
</div>
